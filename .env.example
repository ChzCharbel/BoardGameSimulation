# ==============================================
# Fire Rescue Simulation - Environment Variables Template
# ==============================================
# Copia este archivo a .env y ajusta los valores seg√∫n tu entorno

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# SocketIO Configuration
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Simulation Configuration
MAX_SIMULATIONS=100
DEFAULT_STEP_DELAY=2.0
SIMULATION_TIMEOUT_MINUTES=60

# Game Configuration
MAX_FIREFIGHTERS=6
GRID_WIDTH=8
GRID_HEIGHT=6
VICTIMS_TO_WIN=7
MAX_VICTIMS_LOST=4
MAX_STRUCTURAL_DAMAGE=24

# Performance Configuration
AUTO_CLEANUP_INACTIVE_SIMULATIONS=True
CLEANUP_INTERVAL_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fire_rescue.log

# Security Configuration (Production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Database Configuration (Future use)
# DATABASE_URL=sqlite:///fire_rescue.db
# DATABASE_POOL_SIZE=10
# DATABASE_POOL_TIMEOUT=30

# Cache Configuration (Future use)
# CACHE_TYPE=simple
# CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting (Future use)
# RATELIMIT_ENABLED=True
