# ==============================================
# Fire Rescue Simulation - Production Environment
# ==============================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-production-secret-key-here-change-this

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# SocketIO Configuration
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Simulation Configuration
MAX_SIMULATIONS=500
DEFAULT_STEP_DELAY=1.0
SIMULATION_TIMEOUT_MINUTES=30

# Game Configuration
MAX_FIREFIGHTERS=6
GRID_WIDTH=8
GRID_HEIGHT=6
VICTIMS_TO_WIN=7
MAX_VICTIMS_LOST=4
MAX_STRUCTURAL_DAMAGE=24

# Performance Configuration
AUTO_CLEANUP_INACTIVE_SIMULATIONS=True
CLEANUP_INTERVAL_MINUTES=15

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=logs/fire_rescue_production.log

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200 per hour